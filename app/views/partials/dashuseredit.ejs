<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>Modificar Usuario</h1>
    <ol class="breadcrumb">
      <li>
        <a href="/v1/"><i class="fa fa-dashboard"></i> Inicio</a>
      </li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <!-- Default box -->
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title"></h3>

        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fa fa-minus"></i>
          </button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fa fa-times"></i>
          </button>
        </div>
      </div>
      <div class="box-body">
        <!-- ID usuario -->
        <div class="form-group">
          <label>ID de usuario</label>

          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-user"></i>
            </div>
            <input type="text" value="<%= data.id %>" name="id" class="form-control" readonly />
          </div>
          <!-- /.input group -->
        </div>
        <!-- Nombre usuario -->
        <div class="form-group">
          <label>Nombre de usuario</label>

          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-user"></i>
            </div>
            <input type="text" name="name" value="<%= data.name %>" class="form-control"
              placeholder="Ingrese el nombre de usuario" />
          </div>
          <!-- /.input group -->
        </div>
      </div>
      <div class="box-footer">
        <h3 class="box-title">
          <a class="btn btn-app" href="usuario">
            <i class="fa fa-sign-out"></i>
            Cancelar
          </a>
          <a class="btn btn-app" onclick="guardarcambio(`<%= data.name %>`)">
            <i class="fa fa-save"></i>
            Guardar
          </a>

        </h3>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<script>
  function guardarcambio(nom) {
    Swal.fire({
      title: 'sure to change?',
      text: "will not be able to re!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'yes update it!'
    }).then((result) => {
      if (result.isConfirmed) {

        Swal.fire(
          'info!',
          'registration has been updated.',
          'success'
        )
      }
    })
  }
</script>